
meta(lang="ja")
meta(charset="UTF-8")
title mix-blend-mode-demo
link(rel="icon" type="image/png", href="./favicon.png")

body
	section.topView
		h1 mix-blend-mode demoo
	section.mainView
		.result#background
			.table
				.examplelabel mix-blend-mode:
				.exampleval blended result
				.label normal
				.val.normal 
				.label multiply
				.val.multiply 
				.label screen
				.val.screen 
				.label overlay
				.val.overlay 
				.label darken
				.val.darken 
				.label lighten
				.val.lighten 
				.label color-dodge
				.val.color-dodge 
				.label color-burn
				.val.color-burn 
				.label hard-light
				.val.hard-light 
				.label soft-light
				.val.soft-light 
				.label difference
				.val.difference 
				.label exclusion
				.val.exclusion 
				.label hue
				.val.hue 
				.label saturation
				.val.saturation 
				.label color
				.val.color 
				.label luminosity
				.val.luminosity 
		.controllers
			.bgController
				p ▼背景の色を選択 / pick background-color
				div.bg-picker

			.itemController
				p ▼上に乗るものの色を選択 / pick item-color
				div.item-picker

script(src="./script/main.js")
